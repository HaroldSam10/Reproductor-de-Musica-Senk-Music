<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_player_gradient"
    tools:context=".Repro_Musenk">

    <TextView
        android:id="@+id/TitleMus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/karantina_regular"
        android:text="MUS"
        android:textColor="#30CCC4"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/TitleEnk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/karantina_regular"
        android:text="Enk"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/TitleMus"
        app:layout_constraintStart_toEndOf="@+id/TitleMus" />
    <ImageButton
        android:id="@+id/btnClosePlayer"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />

    <TextView
        android:id="@+id/textSongTitlePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/karantina_regular"
        android:text="SIRENA"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/TitleMus"
        app:layout_constraintTop_toBottomOf="@+id/TitleMus" />
    <TextView
        android:id="@+id/textArtistNamePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/karantina_regular"
        android:text="Sin Bandera"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textSongTitlePlayer"
        app:layout_constraintTop_toBottomOf="@+id/textSongTitlePlayer" />


    <FrameLayout
        android:id="@+id/cardAlbumArtBorder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/cover_art_gradient_border"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@+id/controlWheelContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textArtistNamePlayer">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAlbumArtPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/black">

            <ImageView
                android:id="@+id/imgAlbumArtPlayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/car_login_3" />
        </androidx.cardview.widget.CardView>

    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controlWheelContainer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnQueue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ProgressBar
            android:id="@+id/volumeArc"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:max="100"
            android:progress="70"
            android:progressDrawable="@drawable/progress_bar_volume_arc"
            android:rotation="-90"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/circleOuter"
            android:layout_width="230dp"
            android:layout_height="230dp"
            app:cardBackgroundColor="#30CCC4"
            app:cardCornerRadius="115dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/circleInner"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@android:color/black"
                app:cardCornerRadius="45dp">
                <ImageButton
                    android:id="@+id/btnPlayPause"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_play_arrow"
                    app:tint="@android:color/white" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/btnWheelHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_home"
            app:layout_constraintEnd_toEndOf="@+id/circleOuter"
            app:layout_constraintStart_toStartOf="@+id/circleOuter"
            app:layout_constraintTop_toTopOf="@+id/circleOuter"
            app:tint="@android:color/black" />

        <ImageButton
            android:id="@+id/btnWheelPrev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_previous"
            app:layout_constraintBottom_toBottomOf="@+id/circleOuter"
            app:layout_constraintStart_toStartOf="@+id/circleOuter"
            app:layout_constraintTop_toTopOf="@+id/circleOuter"
            app:tint="@android:color/black" />

        <ImageButton
            android:id="@+id/btnWheelNext"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_next"
            app:layout_constraintBottom_toBottomOf="@+id/circleOuter"
            app:layout_constraintEnd_toEndOf="@+id/circleOuter"
            app:layout_constraintTop_toTopOf="@+id/circleOuter"
            app:tint="@android:color/black" />

        <ImageButton
            android:id="@+id/btnWheelAdd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="@+id/circleOuter"
            app:layout_constraintEnd_toEndOf="@+id/circleOuter"
            app:layout_constraintStart_toStartOf="@+id/circleOuter"
            app:tint="@android:color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageButton
        android:id="@+id/btnVolUp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_volume_up"
        app:layout_constraintBottom_toBottomOf="@+id/controlWheelContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/controlWheelContainer" />
    <ImageButton
        android:id="@+id/btnVolOff"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_volume_off"
        app:layout_constraintBottom_toBottomOf="@+id/controlWheelContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/controlWheelContainer" />

    <ImageButton
        android:id="@+id/btnQueue"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />
    <ImageButton
        android:id="@+id/btnAddToList"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>